include block_html/_include.pug

+header()
.content
	//slider
	.slider
		.slider__el(style="background-image:url('img/slider-1.jpg')")
		.slider__el(style="background-image:url('img/slider-1.jpg')")

	//advant
	.main-cont
		.advant
			.advant__el
				.advant__el-icon
					+icon("one--color","icon icon-one")
				.advant__el-text Настоящая моцарелла
			.advant__el
				.advant__el-icon
					+icon("pizza--color","icon")
				.advant__el-text Сделана из правильного теста
			.advant__el
				.advant__el-icon
					+icon("tomat--color","icon")
				.advant__el-text 100% натуральный соус

	//section
	.section
		.main-cont
			.section-title Пицца
			.grid
				- for (var i=0;i<10;i++)
					.grid__el
						+pizza()
				.grid__el.grid__el--lg
					.pizza-lg
						a(href="#" style="background-image:url('img/pizza-lg.jpg')").pizza-lg__img
						.pizza-lg-cont
							.pizza-lg__timer
								.pizza-lg__timer-val До конца акции: 23:32
							.pizza-lg__title
								a(href="#") Гавайская с курицей
								.pizza-lg__title-icon.tooltip
									+icon("info","icon")
									.top
										i
										| Lorem ipsum dolor sit amet, consectetur adipisicing elit. Iure, laudantium!
							.pizza-lg__info
								.pizza-lg__toggle
									.pizza__size
										.pizza__size-el 25 см
										.pizza__size-el.pizza__size-el--active 30 см
										.pizza__size-el 35 см
									.pizza__dough
										.pizza__dough-el.pizza__dough-el--active Традиционное
										.pizza__dough-el Тонкое
								.pizza-lg__val
									.pizza-lg__price
										.pizza-lg__price-false 380 Р
										.pizza-lg__price-true 240 Р
									.incr__get-wrap
										.pizza-lg__get.icr-btn В корзину
										.elements-icr-block.hidden
											.incr
												.incr__minus.incr--one.incr__nav -
												.incr__val
													span 1
													.incr__val-coner
												.incr__plus.incr__nav +

	//section
	.section
		.main-cont
			.section-title Для большой компании
			.grid.grid--three
				- for (var i=0;i<3;i++)
					.grid__el
						+item('item-food.jpg')

	//section
	.section
		.main-cont
			.section-title Гриль
			.grid
				- for (var i=0;i<6;i++)
					+item('grill.jpg')
				.grid__el.grid__el--lg
					.item-lg
						a(href="#" style="background-image:url('img/grill-lg.jpg')").item-lg__img
						.item-lg-cont
							.item-lg__timer
								.item-lg__timer-val До конца акции: 23:32
							.item-lg-wrap
								.item-lg__title
									a(href="#") Гавайская с курицей
								.item-lg__text Запечённые куриные крылья в маринаде с кусочками перца чили
							.item-lg__info
								.item-lg__val
									.item-lg__price
										.item-lg__price-false 380 Р
										.pizza-lg__price-true 240 Р
									.incr__get-wrap
										.pizza-lg__get.icr-btn В корзину
										.elements-icr-block.hidden
											.incr
												.incr__minus.incr--one.incr__nav -
												.incr__val
													span 1
													.incr__val-coner
												.incr__plus.incr__nav +
	

	//review-slider
	.review-slider-wrap
		.review-slider__title
			span Что говорят люди
				+icon("love","icon")
		.review-slider
			.review-slider__el
				.review-slider__content
					.review-slider__el-text “Очень понравился домашний пирог с курицей в сливочном соусе, ребята это просто божество, спасибо вам большое за такую вкуснотищу!”
					.review-slider__el-author Дмитрий
			.review-slider__el
				.review-slider__content
					.review-slider__el-text “Очень понравился домашний пирог с курицей в сливочном соусе, ребята это просто божество, спасибо вам большое за такую вкуснотищу!”
					.review-slider__el-author Дмитрий
			.review-slider__el
				.review-slider__content
					.review-slider__el-text “Очень понравился домашний пирог с курицей в сливочном соусе, ребята это просто божество, спасибо вам большое за такую вкуснотищу!”
					.review-slider__el-author Дмитрий

	//section
	.section
		.main-cont
			.section-title Напитки
			.grid.grid--six
				- for (var i=0;i<10;i++)
					.grid__el
						.card
							a(href="#").card__img-wrap
								.card__img(style="background-image:url('img/card.jpg')")
							a(href="#").card__text Чай Фьюзти зеленый цитрус, 0,5 л
							.card__val 75 Р
							.incr__get-wrap
								.card__get.icr-btn В корзину
