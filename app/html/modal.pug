include block_html/_style.pug
include block_html/_include.pug

+header()
style(type='text/css').
	.btn-wrap {
		display: flex;
		flex-wrap: wrap;
		flex-flow: column;
		align-items: baseline;
	}
	.btn-wrap .btn--md {
		display: inline-block;
		margin-bottom: 20px;
	}

	@media only screen and (max-width: 640px) {
		.btn-wrap .btn--md{
			width: 100%;
		}
	}
.content
	.main-cont
		.main-cont
			p Чтобы вызвать нужное окно добавь на элемент класс .modal-get и data-modal="имя окна"
			p Чтобы добавить метод закрытия окна по клику на элемент добавиь класс .modal-send
			.btn-wrap
				//.btn--md.btn--mark.modal-get(data-modal="request") Отправка чека | data-modal="request"
				.btn--md.btn--mark.modal-get(data-modal="mail") Почта | data-modal="mail"
				.btn--md.btn--mark.modal-get(data-modal="town") Город | data-modal="town"
				.btn--md.btn--mark.modal-get(data-modal="adress") Добавить адрес | data-modal="adress"
				.btn--md.btn--mark.modal-get(data-modal="re-enter") Получить код | data-modal="re-enter"
				.btn--md.btn--mark.modal-get(data-modal="enter") Вход | data-modal="enter"


+footer()
include ./block_html/_script.pug
