body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em

.main-cont
	center(1200px,10px)

.head
	width:100%

.head-top-wrap
//.main-cont
.head-top
	flex(between)
.head__logo
	width: 195px
	margin-right: 3%
.head__loc
	width: 23%

.head__loc-town
