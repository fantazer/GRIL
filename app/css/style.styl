	.icon
		tr(all)
		size 26px
		fill $green
//.icon
//.head__enter-text
.head__auth
	flex(mid)
	tr(all)
	color $brown--dark
	@extend .type--md
	font-weight 500
	margin-left: auto
	padding: 30px 25px
	border-left 1px solid $gray
	border-right 1px solid $gray
	cp()
	&:hover
		color white
		background: $green
		border-color $green
		.icon
			fill white
//.hidden
.head__auth-ico
	margin-right: 10px
	.icon
		tr(all)
		size 26px
		fill $green
.head__auth-text
	margin-right: 10px
.head__auth-val
	display: block
	opacity .6
.head__basket
	flex(mid)
	cp()
	padding: 30px 25px
	border-left 1px solid $gray
	border-right 1px solid $gray
	margin-left: -1px
	color $brown--dark
	tr(all)
	&:hover
		color white
		background: $green
		border-color $green
		.icon
			fill white
.head__basket__icon
	.icon
		margin-right: 15px
		size 26px
		fill $green
		tr(all)
.head__basket__text
	@extend .type--md
	font-weight 500
.head__basket__val
	opacity:.6

.head-menu-wrap
	border-top 1px solid $gray
	border-bottom 1px solid $gray
.head-menu
	flex(between)
.head-list
	flex(between)
	width: 62%
.head-list__el
	tr(all)
	padding: 20px 10px
	color $brown--dark
	@extend .type--md
	font-weight 500
	&:hover
		color $green
//.head-list__el--active
.head-sub-list
	flex(between)
	width: 35%
	f()
.head-sub-list-el
	tr(all)
	padding: 20px 10px
	color $brown--dark
	@extend .type--md
	font-weight 500
	opacity: .6
	&:hover
		opacity: 1
		color $green

.page
	f()
	fl()
	min-height 100vh
.content
	flex-grow 1
	flex-shrink 1


@keyframes slideInDown {
	from {
		transform: translate3d(0, -100%, 0);
		visibility: visible;
	}

	to {
		transform: translate3d(0, 0, 0);
	}
}

.head-top__list
	display: none
	width: 55%
.head-top__list-el
	tr(all)
	color $brown--dark
	@extend .type--md
	font-weight 500
	&:hover
		color $green

.shrink
	position fixed
	top 0
	left 0
	background white
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out
	border-bottom 1px solid $gray
	.head-menu-wrap
		display: none
	.head__auth
		display: none
	.head__loc
		display: none
	.head__cont
		display: none
	.head-top__list
		flex(between)

	.head__basket
		padding: 10px 20px
	.head__logo
		width: 140px

