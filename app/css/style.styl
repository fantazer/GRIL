		display: none!important

.field-error
	input
		border 1px solid #dc3d3d
.style-label--checkbox.field-error
	.sytle-input-element
		border 1px solid #dc3d3d

.modal-content--true
	flex(mid)
	fl()
	br(10px)
	.icon
		fill green
		size 120px
		margin-bottom: 20px
.modal-text-true
	text-align: center
	font-weight: bold
//modal===end

.modal-soc-enter-text
	margin-top: 40px
	margin-bottom: 20px
	opacity .6
	text-align: center

.soc-row--midle
