mixin header()
	//block header
	.head
		.head-top-wrap
			.main-cont
				.head-top
					a(href="/").head__logo
						img(src="img/logo.svg", alt="")
					.head__loc
						.head__loc-town.modal-get(data-modal="town") Ваш город:
							span.head__loc-town-el Барнаул
						.head__loc-text Среднее время доставки: 43 мин.
					.head__cont
						a(href="tel:8 (3852) 57-17-76").head__cont-phone 8 (3852) 57-17-76
						.head__cont-text Сегодня 11:00 - 24:00
					//remove hidden to show unauthorized User
					.head__enter.hidden
						.head__enter-ico
							+icon("pick","icon")
						.head__enter-text Войти
					a(href="#").head__auth
						.head__auth-ico
							+icon("pick","icon")
						.head__auth-text Александр
						.head__auth-val 365 Б
					.head-toggle
						+icon("menu","icon icon-open")
						+icon("close","icon icon-close")
					.head__basket
						.head__basket__icon
							+icon("basket","icon")
						.head__basket__text.hidden Корзина
						.head__basket__text 1 923 Р
							span.head__basket__val (3)
						.head__basket__val--mobile 3
		.head-menu-wrap
			.main-cont
				.head-menu
					.head-list
						-
							var items = [
								'Пицца',
								'Вок',
								'Шаурма',
								'Гриль',
								'Салаты',
								'Десерты',
								'Напитки',
								'Акции'
								];
						each item,index in items
							a(href="#" class= index === 0 ? 'head-list__el--active' : null).head-list__el #{item}
					.head-sub-list
							-
								var items = [
									'О нас',
									'Вакансии',
									'Франшиза',
									'Контакты'
									];
							each item in items
								a(href="#").head-sub-list-el #{item}
	.slide-menu
		.slide-menu__list
			-
				var items = [
					'О нас',
					'Вакансии',
					'Франшиза',
					'Контакты'
					];
			each item in items
				a(href="#").slide-menu__list-el #{item}
		.slide-menu-btn.slide-menu-btn__enter.modal-get(data-modal="enter")
			.slide-menu-btn__icon
				+icon("pick","icon")
			.slide-menu-btn__text Войти
		.slide-menu-btn.slide-menu-btn--town
			.slide-menu-btn__text Ваш город:
				span.slide-menu-btn__text-val Барнаул
		.slide-menu__town.hidden
			.slide-menu__town-title Выберите Ваш город
			.select-city
				.select-city__el
					+radio("Барнаул","payment","check")
				.select-city__el
					+radio("Байск","payment")
		.slide-menu__time Среднее время доставки: 43 мин.
		a(href="tel:8 (3852) 57-17-76").slide-menu__phone 8 (3852) 57-17-76
		.slide-menu__work Сегодня 11:00 - 24:00


	//block header end